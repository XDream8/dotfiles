#!/bin/sh

opts=">>h Select the browser you want to use
Chromium(system)
Librewolf(flatpak)
Firefox(chroot)
Chromium(chroot)
Luakit
Vimb
:r ï€‘Quit"

choice=$(printf '%s\n' "$opts" |  repomenu -ps 1 -l 13 -w -400 -i -h -1 -y -1 -c )

case "$choice" in
  *Quit)
    echo "Program terminated." && exit 1
  ;;
  *Firefox*chroot*)
		enter-chroot firefox
  ;;
  *Chromium*chroot*)
		enter-chroot chromium --no-sandbox --enable-low-end-device-mode
  ;;
  *Chromium*system*)
    chromium --enable-low-end-device-mode
  ;;
	*Librewolf*flatpak*)
		asoundrc=~xdream8/.var/app/io.gitlab.librewolf-community/config/alsa/asoundrc
		# update alsa config
		rm -f $asoundrc
		cp ${XDG_CONFIG_HOME:-$HOME/.config}/alsa/asoundrc $asoundrc

		flatpak run io.gitlab.librewolf-community
	;;
	*Luakit)
		luakit
	;;
	*Vimb)
		vimb
	;;
  *)
		exit 1
	;;
esac
